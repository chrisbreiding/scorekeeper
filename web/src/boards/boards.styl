.board-list {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}

.boards {
  display: -webkit-flex;
  display: flex;
  position: absolute;
  top: 0;
  right: 60px;
  bottom: 0;
  left: 0;
}

.board {
  margin: 12px;
  margin-left: 0;
  position: relative;
  -webkit-flex-grow: 1;
  flex-grow: 1;
}

.board:first-child {
  margin-left: 12px;
}

.board-name,
.scores,
.total {
  border: none;
  display: block;
  font-size: 1em;
  outline: none;
  position: absolute;
  left: 0;
  right: 0;
  width: 100%;
}

.board-name {
  background: #28361B;
  color: #FFF;
  height: 2.6em;
  line-height: 1em;
  padding: 0.8em;
  padding-left: 2em;
  top: 0;
}

.board-name:focus {
  background: #506B38;
}

.rank {
  color: #f8f8f8;
  font-size: 1.2em;
  position: absolute;
  top: 0;
  left: 0;
  width: 1em;
  height: 2.2em;
}

.no-rank .rank {
  display: none;
}

.rank:before {
  border-top: solid 1.1em rgba(255, 255, 255, 0.2);
  border-right: solid 1.1em transparent;
  border-bottom: solid 1.1em transparent;
  border-left: solid 1.1em rgba(255, 255, 255, 0.2);
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 0;
  height: 0;
}

.rank span {
  display: block;
  font-size: 0.8em;
  position: relative;
  top: 3px;
  left: 4px;
  text-align: center;
}

.total {
  background: #333;
  bottom: 0;
  color: #FFF;
  padding: 0 .8em;
  height: 3em;
  line-height: 3em;
}

.total > span {
  font-size: 1.5em;
}

.total button {
  color: #a3a3a3;
  display: block;
  position: absolute;
  top: 0;
  right: .5em;
  height: 3em;
  line-height: 3em;
}

.total button:hover {
  color: #FFF;
}

.total button span {
  display: block;
  font-size: 1.8em;
  height: 100%;
}

.close {
  color: #a3a3a3;
  font-size: 1.2em;
  position: absolute;
  top: 0;
  right: 0;
  width: 1em;
  height: 1em;
  line-height: 1em;
}

.close:hover,
.close:focus {
  color: #FFF;
}

.close:before {
  border-top: solid 1.1em rgba(0, 0, 0, 0.5);
  border-right: solid 1.1em rgba(0, 0, 0, 0.5);
  border-bottom: solid 1.1em transparent;
  border-left: solid 1.1em transparent;
  content: '';
  position: absolute;
  right: 0;
  top: 0;
  width: 0;
  height: 0;
}

.close:hover:before {
  border-top-color: rgba(0, 0, 0, 0.8);
  border-right-color: rgba(0, 0, 0, 0.8);
}

.close span {
  position: relative;
  top: 1px;
  right: 1px;
}
