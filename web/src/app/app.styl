.board-name,
.score,
.score button,
.close,
.close:before,
.plus,
.total button {
  transition: all .5s ease;
}

.plus {
  background: #28361B;
  color: #d3d3d3;
  font-size: 2em;
  position: absolute;
  top: 12px;
  right: 12px;
  bottom: 12px;
  width: 48px;
  line-height: 100%;
}

.plus:hover,
.plus:focus {
  background: #506B38;
}
