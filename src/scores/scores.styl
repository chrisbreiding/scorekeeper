.scores {
  background: #d3d3d3;
  color: #28361B;
  cursor: cell;
  overflow: scroll;
  top: 2.6em;
  bottom: 3em;
}

.score {
  cursor: text;
  padding: 4px 10px;
  position: relative;
}

.score:first-child {
  padding-top: 8px;
}

.score:hover {
  background: #c1c1c1;
}

.score.editing {
  background: #FFF;
  padding: 8px 10px;
}

.score input {
  background: none;
  border: none;
  color: #333;
  font-size: 1em;
  outline: none;
  width: 100%;
}

.score button {
  color: #878787;
  display: none;
  position: absolute;
  top: 50%;
  right: 2px;
  margin-top: -0.75em;
  width: 1.4em;
  height: 1.4em;
  line-height: 1.4em;
}

.score:hover button,
.editing button {
  display: block;
}

.score button:hover {
  color: #444;
}
